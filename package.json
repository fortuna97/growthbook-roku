{
  "name": "growthbook-roku",
  "version": "1.3.0",
  "description": "Official GrowthBook SDK for Roku/BrightScript applications",
  "main": "source/GrowthBook.brs",
  "scripts": {
    "test": "node tests/validate-logic.js && npm run test:native",
    "test:validator": "node tests/validate-logic.js",
    "test:native": "node tests/run-native.js",
    "test:rooibos": "rooibos",
    "test:coverage": "rooibos --coverage",
    "lint": "npx bslint source/ tests/",
    "syntax": "npx bsc --check-only",
    "build": "npx bsc",
    "validate": "npm test",
    "deploy": "echo 'Deploy script not configured'",
    "test:channel": "copy source\\GrowthBook.brs test-channel\\source\\"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/growthbook/growthbook-roku.git"
  },
  "keywords": [
    "growthbook",
    "roku",
    "feature-flags",
    "a/b-testing",
    "experiments",
    "brightscript",
    "sdk"
  ],
  "author": "GrowthBook Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "source/",
    "docs/",
    "examples/",
    "tests/",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/growthbook/growthbook-roku#readme",
  "bugs": {
    "url": "https://github.com/growthbook/growthbook-roku/issues"
  },
  "devDependencies": {
    "@rokucommunity/brs": "^0.47.4",
    "@rokucommunity/bslint": "^0.8.0",
    "brighterscript": "^0.65.0"
  }
}
