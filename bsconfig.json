{
  "rootDir": "./",
  "files": [
    "source/**/*.brs",
    "tests/**/*.brs",
    "manifest"
  ],
  "autoImportComponentScript": true,
  "createPackage": true,
  "plugins": [
    "@rokucommunity/bslint"
  ],
  "diagnosticSeverityOverrides": {
    "BSLINT_1001": "error",
    "BSLINT_1002": "error",
    "BSLINT_1003": "error",
    "BSLINT_1004": "error"
  },
  "diagnosticFilters": [
    {
      "src": "**/node_modules/**/*",
      "severity": "off"
    }
  ]
}
